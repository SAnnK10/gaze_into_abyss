<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <Target Name="CopySDL2" AfterTargets="Build">
    <ItemGroup>
      <SDL2Lib Include="/opt/homebrew/lib/libSDL2.dylib" Condition="Exists('/opt/homebrew/lib/libSDL2.dylib')" />
      <SDL2Lib Include="/usr/local/lib/libSDL2.dylib" Condition="Exists('/usr/local/lib/libSDL2.dylib')" />
    </ItemGroup>

    <Copy 
      SourceFiles="@(SDL2Lib)"
      DestinationFolder="$(OutDir)" 
      SkipUnchangedFiles="true"
    />
  </Target>

</Project>
